<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/bg_inforstaff"
    android:padding="@dimen/_5sdp"
    android:id="@+id/item_TimekeepingStaff"
    android:layout_marginVertical="@dimen/_5sdp">
    <RelativeLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:id="@+id/groupif"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/imgAvtStaff"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:src="@drawable/img_avatar_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAvtStaff"
            android:id="@+id/staffName"
            android:textSize="@dimen/_25ssp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgAvtStaff"
            android:layout_below="@+id/staffName"
            android:id="@+id/staffId"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_16ssp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_btntk"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/result_btn"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_stop"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bg_inforstaff"
            android:backgroundTint="@color/white"

            android:layout_marginLeft="@dimen/_10sdp"/>
    </RelativeLayout>
</RelativeLayout>